run = "npm run dev"
hidden = [".build", ".config"]

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"

[nix]
channel = "stable-22_11"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = [ "typescript-language-server", "--stdio" ]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 42535
externalPort = 3002
exposeLocalhost = true

[[ports]]
localPort = 42603
externalPort = 3000
exposeLocalhost = true

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 36969777

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
